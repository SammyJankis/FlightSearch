<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardCornerRadius="@dimen/card_corner_radius"
    card_view:cardElevation="@dimen/card_elevation"
    card_view:cardMaxElevation="@dimen/card_elevation"
    card_view:cardPreventCornerOverlap="true"
    card_view:cardUseCompatPadding="false"
    card_view:paddingEnd="@dimen/material_space_between_content_areas"
    card_view:paddingStart="@dimen/material_space_between_content_areas">

    <LinearLayout
        android:id="@+id/layout_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity=""
            android:padding="@dimen/material_space_between_content_areas"
            android:text="asd"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/material_text_title"
            android:textStyle="bold" />

    </LinearLayout>

</android.support.v7.widget.CardView>