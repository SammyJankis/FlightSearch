<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardElevation="@dimen/card_elevation"
    card_view:cardMaxElevation="@dimen/card_elevation"
    card_view:cardPreventCornerOverlap="true"
    card_view:cardUseCompatPadding="false"
    card_view:paddingEnd="@dimen/material_space_between_content_areas"
    android:layout_marginBottom="@dimen/card_margin"
    android:layout_marginTop="@dimen/card_margin"
    card_view:paddingStart="@dimen/material_space_between_content_areas">

    <LinearLayout
        android:id="@+id/layout_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/material_space_between_content_areas"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.arturoguillen.flightsearch.utils.ui.PicassoView
                android:id="@+id/pi_inbound_carrier"
                android:layout_width="@dimen/image"

                android:layout_height="@dimen/image" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/material_space_between_content_areas"
                android:layout_marginStart="@dimen/material_space_between_content_areas"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/material_space_between_content_areas"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_inbound_time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/material_text_subhead"
                        android:textStyle="bold"
                        tools:text="15:35 - 17:00" />

                    <TextView
                        android:id="@+id/tv_inbound_type"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/material_text_subhead"
                        android:textStyle="bold"
                        tools:text="Direct" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_inbound_info"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:textSize="@dimen/material_text_subhead"
                        tools:text="BUD-LGW, Wizz Air" />


                    <TextView
                        android:id="@+id/tv_inbound_duration"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:textSize="@dimen/material_text_subhead"
                        tools:text="2h 25m" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.arturoguillen.flightsearch.utils.ui.PicassoView
                android:id="@+id/pi_outbound_carrier"
                android:layout_width="@dimen/image"
                android:layout_height="@dimen/image" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/material_space_between_content_areas"
                android:layout_marginStart="@dimen/material_space_between_content_areas"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/material_space_between_content_areas"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_outbound_time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/material_text_subhead"
                        android:textStyle="bold"
                        tools:text="15:35 - 17:00" />

                    <TextView
                        android:id="@+id/tv_outbound_type"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/material_text_subhead"
                        android:textStyle="bold"
                        tools:text="Direct" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_outbound_info"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:textSize="@dimen/material_text_subhead"
                        tools:text="BUD-LGW, Wizz Air" />


                    <TextView
                        android:id="@+id/tv_outbound_duration"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:textSize="@dimen/material_text_subhead"
                        tools:text="2h 25m" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/material_space_between_content_areas"
            android:layout_marginEnd="@dimen/material_space_between_content_areas"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:textColor="@android:color/black"
                android:textSize="@dimen/material_text_body1"
                android:textStyle="bold"
                android:text="10.0" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:textColor="@android:color/black"
                android:textSize="@dimen/material_text_headline"
                android:textStyle="bold"
                tools:text="35" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/material_space_between_content_areas"
            android:layout_marginEnd="@dimen/material_space_between_content_areas"            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:text="@string/cheapest_shortest"
                android:textColor="@android:color/holo_green_light"
                android:textSize="@dimen/material_text_body2" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="@string/bookings"
                android:textSize="@dimen/material_text_body2" />

        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>