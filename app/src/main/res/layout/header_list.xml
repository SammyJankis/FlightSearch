<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/material_screen_edge"
    android:orientation="vertical"
    android:translationZ="@dimen/material_space_between_content_areas">

    <TextView
        android:id="@+id/flight_dest_orig"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/material_space_between_content_areas"
        android:gravity="center_horizontal"
        android:textSize="@dimen/material_text_title"
        android:textStyle="bold"
        tools:text="London to Madrid" />

    <TextView
        android:id="@+id/flight_dates"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/material_space_between_content_areas"
        android:gravity="center_horizontal"
        android:textSize="@dimen/material_text_subhead"
        tools:text="Mar 01., Wed - Mar 05., Sun" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/flights_results"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:textSize="@dimen/material_text_menu"
            tools:text="365 of 365 results shown" />

        <TextView
            android:id="@+id/filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/material_space_between_content_buttons"
            android:textColor="@android:color/holo_blue_bright"
            android:textSize="@dimen/material_text_menu"
            android:text="@string/filter" />

        <TextView
            android:id="@+id/sort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/filter"
            android:textColor="@android:color/holo_blue_bright"
            android:textSize="@dimen/material_text_menu"
            android:text="@string/sort" />

    </RelativeLayout>
</LinearLayout>